@using Domain.Entities
@using UsingEF.Helpers
@model List<Book>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <style type="text/css">
        #firstTable
        {
            position:absolute;
            top: 10px;
            left: 20px;
            width: 200px;
        }
        #secondTable
        {
            position:absolute;
            top: 10px;
            left: 200px;
            width: 200px;
        }
        
    </style>
    <head>
        <title>Index</title>
        <script src="/Scripts/MicrosoftAjax.js" type="text/javascript"></script>
        <script src="/Scripts/MicrosoftMvcAjax.js" type="text/javascript"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    </head>
    <body>

        
        <div id="firstTable">
            <h1> Table1:</h1>
            <table>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Author</th>
                </tr>
            
                @foreach (Book book in Model)
                {
                    <tr>
                        <td></td>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                    </tr>
                }
            
            </table>
            <p>
                @Html.PagingNavigator((int)Html.ViewData["pageNum"], 
                                      (int)Html.ViewData["itemsCount"],(int)Html.ViewData["pageSize"])
            </p>
            <div id="BooksDiv">
                @{ Html.RenderPartial("IndexPage", Model, ViewData); }
            </div>
        </div>
    </body>
</html>
